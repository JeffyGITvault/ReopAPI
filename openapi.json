{
  "openapi": "3.1.0",
  "info": {
    "title": "SECAPI",
    "version": "4.3.4",
    "description": "Fetch the latest 10-Q filings for any public company using CIK resolution, alias mapping, and SEC integration. Supports agentic workflows with up to four 10-Qs."
  },
  "servers": [
    {
      "url": "https://secapi.onrender.com",
      "description": "Primary Render deployment of SECAPI"
    }
  ],
  "paths": {
    "/get_quarterlies/{company_name}": {
      "get": {
        "operationId": "getQuarterlies",
        "summary": "Retrieve the most recent 10-Q filings for a public company",
        "parameters": [
          {
            "name": "company_name",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Company name or ticker symbol (e.g., RH, AAPL, Meta)"
          },
          {
            "name": "agent_mode",
            "in": "query",
            "required": false,
            "schema": {
              "type": "boolean",
              "default": false
            },
            "description": "If true, returns up to 4 quarterly filings instead of 2 (for agentic workflows)"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response containing company info and 10-Q reports",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "company_name": {
                      "type": "string"
                    },
                    "cik": {
                      "type": "string"
                    },
                    "quarterly_reports": {
                      "type": "array",
                      "description": "The most recent two 10-Q reports",
                      "items": {
                        "$ref": "#/components/schemas/Filing"
                      }
                    },
                    "cached_quarterlies": {
                      "type": "array",
                      "description": "Additional 10-Q reports (up to 2 more) returned only in agent mode",
                      "items": {
                        "$ref": "#/components/schemas/Filing"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Filing": {
        "type": "object",
        "properties": {
          "Filing Date": {
            "type": "string",
            "format": "date"
          },
          "HTML Report": {
            "type": "string"
          },
          "DisplayIndex": {
            "type": "string"
          },
          "Marker": {
            "type": "string"
          }
        }
      }
    }
  }
}
