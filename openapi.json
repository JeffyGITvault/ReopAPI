{
  "openapi": "3.1.0",
  "info": {
    "title": "SECAPI",
    "version": "4.3.7",
    "description": "Fetch the latest 10-Q filings for any public company using CIK resolution and SEC EDGAR integration. Returns validated SEC report links with GPT-friendly formatting."
  },
  "x-openai-function": {
    "name": "get_filings_for_company",
    "description": "Retrieve the latest 10-Q filings for a public company. Returns structured metadata and validated HTML links."
  },
  "servers": [
    {
      "url": "https://secapi.5s5x.onrender.com",
      "description": "Primary Render deployment of SECAPI"
    }
  ],
  "paths": {
    "/get_quarterlies/{company_name}": {
      "get": {
        "operationId": "getQuarterlies",
        "summary": "Retrieve the most recent 10-Q filings for a public company",
        "parameters": [
          {
            "name": "company_name",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Company name or ticker symbol (e.g., RH, AAPL, Meta)"
          },
          {
            "name": "count",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 2,
              "minimum": 1,
              "maximum": 4
            },
            "description": "Number of recent 10-Q filings to return (max 4)"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response containing company info and 10-Q reports",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "company_name": {
                      "type": "string"
                    },
                    "cik": {
                      "type": "string"
                    },
                    "filings": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Filing"
                      }
                    },
                    "cached_quarterlies": {
                      "type": "array",
                      "description": "Reserved for future use",
                      "items": {
                        "$ref": "#/components/schemas/Filing"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Filing": {
        "type": "object",
        "properties": {
          "filing_date": {
            "type": "string",
            "format": "date"
          },
          "html_url": {
            "type": "string"
          },
          "html_link": {
            "type": "string",
            "description": "Markdown-formatted version of the HTML report for GPT display"
          },
          "status": {
            "type": "string"
          },
          "display_index": {
            "type": "string"
          },
          "marker": {
            "type": "string"
          }
        }
      }
    }
  }
}
