{
  "openapi": "3.1.0",
  "info": {
    "title": "SECAPI Multi-Agent System",
    "version": "5.0.0",
    "description": "Multi-agent system to fetch SEC filings, perform financial analysis, profile executives, and conduct market analysis."
  },
  "servers": [
    {
      "url": "https://secapi-trusted.onrender.com",
      "description": "Primary Render deployment of SECAPI"
    }
  ],
  "paths": {
    "/secapi/get_quarterlies/{company_name}": {
      "get": {
        "operationId": "getQuarterlies",
        "summary": "Retrieve the most recent 10-Q filings for a public company",
        "parameters": [
          {
            "name": "company_name",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Company name or ticker symbol (e.g., RH, AAPL, Meta)"
          },
          {
            "name": "count",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 2,
              "minimum": 1,
              "maximum": 4
            },
            "description": "Number of recent 10-Q filings to return (max 4)"
          }
        ],
        "responses": {
          "200": {
            "description": "Structured response with CIK and validated 10-Q filing links",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SecApiResponse"
                }
              }
            }
          }
        }
      }
    },
    "/run_pipeline": {
      "post": {
        "operationId": "runPipeline",
        "summary": "Run full multi-agent analysis pipeline for a company",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PipelineRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Structured response from multi-agent analysis",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PipelineResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Filing": {
        "type": "object",
        "properties": {
          "filing_date": { "type": "string", "format": "date" },
          "html_url": { "type": "string" },
          "html_link": { "type": "string", "description": "Markdown link" },
          "status": { "type": "string" },
          "display_index": { "type": "string" },
          "marker": { "type": "string" }
        }
      },
      "SecApiResponse": {
        "type": "object",
        "properties": {
          "company_name": { "type": "string" },
          "cik": { "type": "string" },
          "filings": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/Filing" }
          },
          "cached_quarterlies": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/Filing" }
          },
          "error": { "type": "string" },
          "note": { "type": "string" }
        }
      },
      "PipelineRequest": {
        "type": "object",
        "required": ["company", "people", "meeting_context"],
        "properties": {
          "company": { "type": "string" },
          "people": {
            "type": "array",
            "items": { "type": "string" }
          },
          "meeting_context": { "type": "string" }
        }
      },
      "PipelineResponse": {
        "type": "object",
        "properties": {
          "company": { "type": "string" },
          "meeting_context": { "type": "string" },
          "sec_data": {
            "$ref": "#/components/schemas/SecApiResponse"
          },
          "financial_analysis": { "type": "object" },
          "people_profiles": {
            "type": "array",
            "items": { "type": "object" }
          },
          "market_analysis": { "type": "object" }
        }
      }
    }
  }
}
