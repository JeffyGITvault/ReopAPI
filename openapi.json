{
  "openapi": "3.1.0",
  "info": {
    "title": "SECAPI",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://secapi.onrender.com",
      "description": "Base URL for the SECAPI"
    }
  ],
  "paths": {
    "/get_quarterlies/{company_name}": {
      "get": {
        "operationId": "getQuarterlies",
        "summary": "Fetch recent 10-Q filings",
        "parameters": [
          {
            "name": "company_name",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The name or ticker of the company"
          },
          {
            "name": "agent_mode",
            "in": "query",
            "required": false,
            "schema": {
              "type": "boolean",
              "default": false
            },
            "description": "Set to true to include up to 4 quarterly filings instead of 2"
          }
        ],
        "responses": {
          "200": {
            "description": "Quarterly filings retrieved",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "company_name": {
                      "type": "string"
                    },
                    "cik": {
                      "type": "string"
                    },
                    "quarterly_reports": {
                      "type": "array",
                      "description": "The latest two 10-Q filings (default view)",
                      "items": {
                        "$ref": "#/components/schemas/Filing"
                      }
                    },
                    "cached_quarterlies": {
                      "type": "array",
                      "description": "Additional 10-Q filings (up to 2 more), included when agent_mode is true or for backend use.",
                      "items": {
                        "$ref": "#/components/schemas/Filing"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Filing": {
        "type": "object",
        "properties": {
          "filing_date": {
            "type": "string",
            "format": "date"
          },
          "report_url": {
            "type": "string"
          },
          "excel_url": {
            "type": "string"
          }
        }
      }
    }
  }
}
