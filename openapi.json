{
  "openapi": "3.1.0",
  "info": {
    "title": "SECAPI",
    "version": "4.3.5",
    "description": "Fetch the latest 10-Q filings for any public company using CIK resolution and SEC EDGAR integration. Returns validated HTML report links."
  },
  "servers": [
    {
      "url": "https://secapi.onrender.com",
      "description": "Primary Render deployment of SECAPI"
    }
  ],
  "paths": {
    "/get_quarterlies/{company_name}": {
      "get": {
        "operationId": "getQuarterlies",
        "summary": "Retrieve the most recent 10-Q filings for a public company",
        "parameters": [
          {
            "name": "company_name",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Company name or ticker symbol (e.g., RH, AAPL, Meta)"
          },
          {
            "name": "count",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 2,
              "minimum": 1,
              "maximum": 4
            },
            "description": "Number of recent 10-Q filings to return (max 4)"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response containing company info and 10-Q reports",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "Matched Company Name": {
                      "type": "string"
                    },
                    "CIK": {
                      "type": "string"
                    },
                    "10-Q Filings": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Filing"
                      }
                    },
                    "cached_quarterlies": {
                      "type": "array",
                      "description": "Reserved for future use",
                      "items": {
                        "$ref": "#/components/schemas/Filing"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Filing": {
        "type": "object",
        "properties": {
          "Filing Date": {
            "type": "string",
            "format": "date"
          },
          "HTML Report": {
            "type": "string"
          },
          "Status": {
            "type": "string"
          },
          "DisplayIndex": {
            "type": "string"
          },
          "Marker": {
            "type": "string"
          }
        }
      }
    }
  }
}
